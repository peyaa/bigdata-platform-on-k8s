<?xml version="1.0"?>
<configuration>
    <property>
        <name>yarn.nodemanager.aux-services</name>
        <value>mapreduce_shuffle</value>
    </property>
    <property>
        <name>yarn.resourcemanager.ha.enabled</name>
        <value>true</value>
    </property>
    <property>
        <name>yarn.resourcemanager.ha.automatic-failover.enabled</name>
        <value>true</value>
    </property>
    <property>
        <name>yarn.resourcemanager.ha.automatic-failover.embedded</name>
        <value>true</value>
    </property>
    <property>
        <name>yarn.resourcemanager.cluster-id</name>
        <value>yarn-{hadoop_ha_cluster_name}</value>
    </property>
    <property>
        <name>yarn.resourcemanager.ha.rm-ids</name>
        <value>rm1,rm2</value>
    </property>
    <property>
      <name>yarn.resourcemanager.hostname</name>
      <value>{hadoop_master_node_host_name}</value>
    </property>
    <property>
      <name>yarn.resourcemanager.hostname.rm1</name>
      <value>{hadoop_master_node_host_name}</value>
    </property>
    <property>
      <name>yarn.resourcemanager.hostname.rm2</name>
      <value>{hadoop_master_node_host_name}-standby</value>
    </property>
    <property>
        <name>yarn.resourcemanager.recovery.enabled</name>
        <value>true</value>
    </property>
    <property>
        <name>yarn.resourcemanager.store.class</name>
        <value>org.apache.hadoop.yarn.server.resourcemanager.recovery.ZKRMStateStore</value>
    </property>
    <property>
        <name>yarn.resourcemanager.webapp.address.rm1</name>
        <value>{hadoop_master_node_host_name}:{yarn_resourcemanager_webapp_address_rm1_port}</value>
    </property>
    <property>
        <name>yarn.resourcemanager.webapp.address.rm2</name>
        <value>{hadoop_master_node_host_name}-standby:{yarn_resourcemanager_webapp_address_rm2_port}</value>
    </property>
    <property>
        <name>yarn.resourcemanager.address.rm1</name>
        <value>{hadoop_master_node_host_name}:{yarn_resourcemanager_address_rm1_port}</value>
    </property>
    <property>
        <name>yarn.resourcemanager.address.rm2</name>
        <value>{hadoop_master_node_host_name}-standby:{yarn_resourcemanager_address_rm2_port}</value>
    </property>
    <property>
        <name>yarn.resourcemanager.admin.address.rm1</name>
        <value>{hadoop_master_node_host_name}:{yarn_resourcemanager_admin_address_rm1_port}</value>
    </property>
    <property>
        <name>yarn.resourcemanager.admin.address.rm2</name>
        <value>{hadoop_master_node_host_name}-standby:{yarn_resourcemanager_admin_address_rm2_port}</value>
    </property>
    <property>
        <name>yarn.resourcemanager.webapp.https.address.rm1</name>
        <value>{hadoop_master_node_host_name}:{yarn_resourcemanager_webapp_https_address_rm1_port}</value>
    </property>
    <property>
        <name>yarn.resourcemanager.webapp.https.address.rm2</name>
        <value>{hadoop_master_node_host_name}-standby:{yarn_resourcemanager_webapp_https_address_rm2_port}</value>
    </property>
    <property>
        <name>yarn.resourcemanager.scheduler.address.rm1</name>
        <value>{hadoop_master_node_host_name}:{yarn_resourcemanager_scheduler_address_rm1_port}</value>
    </property>
    <property>
        <name>yarn.resourcemanager.scheduler.address.rm2</name>
        <value>{hadoop_master_node_host_name}-standby:{yarn_resourcemanager_scheduler_address_rm2_port}</value>
    </property>
    <property>
        <name>yarn.resourcemanager.resource-tracker.address.rm1</name>
        <value>{hadoop_master_node_host_name}:{yarn_resourcemanager_resource_tracker_address_rm1_port}</value>
    </property>
    <property>
        <name>yarn.resourcemanager.resource-tracker.address.rm2</name>
        <value>{hadoop_master_node_host_name}-standby:{yarn_resourcemanager_resource_tracker_address_rm2_port}</value>
    </property>
    <property>
        <name>yarn.resourcemanager.zk-address</name>
        <value>{zookeeper_cluster_url}</value>
    </property>
    <property>
        <name>yarn.nodemanager.localizer.address</name>
        <value>0.0.0.0:{yarn_nodemanager_localizer_address_port}</value>
    </property>
    <property>
        <name>yarn.nodemanager.webapp.address</name>
        <value>0.0.0.0:{yarn_nodemanager_webapp_address_port}</value>
    </property>
    <property>
        <name>yarn.nodemanager.pmem-check-enabled</name>
        <value>false</value>
    </property>
    <property>
        <name>yarn.nodemanager.vmem-check-enabled</name>
        <value>false</value>
    </property>
    <property>
        <name>yarn.nm.liveness-monitor.expiry-interval-ms</name>
        <value>30000</value>
    </property>
</configuration>